{
    "name": "inanepain/stdlib",
    "description": "Common classes, tools and utilities used throughout the inanepain libraries.",
    "type": "library",
    "license": "Unlicense",
    "homepage": "https://github.com/inanepain/stdlib",
    "readme": "README.adoc",
    "authors": [
        {
            "name": "Philip Michael Raab",
            "email": "philip@cathedral.co.za",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "philip@cathedral.co.za",
        "issues": "https://github.com/inanepain/stdlib/issues"
    },
    "keywords": [
        "inane",
        "stdlib",
        "json",
        "array",
        "exception",
        "notice",
        "config"
    ],
    "autoload": {
        "psr-4": {
            "Inane\\Stdlib\\": "src/"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "discard-changes": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.1",
        "psr/container": "*"
    },
    "require-dev": {},
    "scripts": {
        "mk-doc-dir": [
            "mkdir -p doc/{changelog,readme}",
            "mkdir -p doc/changelog/release",
            "mkdir -p doc/readme/part",
            "touch doc/{changelog,readme}/index.adoc",
            "touch doc/changelog/release/0.0.0.adoc",
            "touch doc/readme/part/install.adoc"
        ],
        "build": [
            "echo build: all",
            "@build-changelog",
            "@build-readme"
        ],
        "build-changelog": [
            "echo building: changelog...",
            "rm -f CHANGELOG.adoc",
            "asciidoctor-reducer -o CHANGELOG.adoc doc/changelog/index.adoc",
            "asciidoctor -b docbook CHANGELOG.adoc",
            "rm -f CHANGELOG.md",
            "pandoc -f docbook -t markdown_strict CHANGELOG.xml -o CHANGELOG.md",
            "rm -f CHANGELOG.xml"
        ],
        "build-readme": [
            "echo building: readme...",
            "rm -f README.adoc",
            "asciidoctor-reducer -o README.adoc doc/readme/index.adoc",
            "asciidoctor -b docbook README.adoc",
            "rm -f README.md",
            "pandoc -f docbook -t markdown_strict README.xml -o README.md",
            "rm -f README.xml"
        ]
    }
}
